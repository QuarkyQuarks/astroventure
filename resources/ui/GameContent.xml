<RelativeLayout
    name="inGameLayout"
    horizontalSizePolicy="match_parent"
    verticalSizePolicy="match_parent"
    padding="8dp 8dp 8dp 8dp">

    <LinearLayout
        orientation="horizontal"
        name="score_container"
        script="ui/RoundedBackground.lua"
        padding="8dp 6dp 8dp 6dp"
        p_layoutAlignment="top|left">

        <ImageWidget
            width="12.5dp"
            height="12.5dp"
            name="planets_image"
            imageSrc="icons/planet.png"
            imageFiltering="linear"
            p_marginRight="6dp"/>

        <Label
            name="score"
            text="0"
            textAlignment="left"
            fontSize="14dp"
            fontColor="#ffffff"
            p_layoutAlignment="center"/>

    </LinearLayout>

    <ImageWidget
        width="23.5dp"
        height="23.5dp"
        name="pause"
        script="ui/RoundedBackground.lua"
        padding="4dp 4dp 4dp 4dp"
        imageSrc="icons/pause.png"
        imageFiltering="linear"
        p_layoutAlignment="top|center"/>

    <LinearLayout
        orientation="horizontal"
        name="crystals_container"
        script="ui/RoundedBackground.lua"
        padding="8dp 6dp 8dp 6dp"
        p_layoutAlignment="top|right">

        <ImageWidget
            width="12.5dp"
            height="12.5dp"
            name="crystals_image"
            imageSrc="icons/crystal.png"
            imageFiltering="linear"
            p_marginRight="6dp"/>

        <Label
            name="crystals"
            text="0"
            textAlignment="left"
            fontSize="14dp"
            fontColor="#ffffff"
            p_layoutAlignment="center"/>

    </LinearLayout>

</RelativeLayout>