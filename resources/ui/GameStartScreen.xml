<RelativeLayout
    name="gameStartContainer"
    horizontalSizePolicy="match_parent"
    verticalSizePolicy="match_parent"
    padding="8dp 8dp 8dp 8dp">

    <ImageWidget
        width="24dp"
        height="24dp"
        name="settings"
        backgroundColor="#88645394"
        script="ui/RoundedBackground.lua"
        padding="4dp 4dp 4dp 4dp"
        imageSrc="icons/settings.png"
        imageFiltering="linear"
        p_layoutAlignment="top|left"/>

    <LinearLayout
        name="crystals_layout"
        orientation="horizontal"
        backgroundColor="#88645394"
        script="ui/RoundedBackground.lua"
        padding="8dp 6dp 8dp 6dp"
        p_layoutAlignment="top|right"
        p_marginBottom="6dp">

        <ImageWidget
            width="12.5dp"
            height="12.5dp"
            name="crystals_image"
            imageSrc="icons/crystal.png"
            imageFiltering="linear"
            p_marginRight="6dp"/>

        <Label
            name="crystals"
            textAlignment="left"
            fontSize="14dp"
            fontColor="#ffffff"
            p_layoutAlignment="center"/>

    </LinearLayout>

    <LinearLayout
        name="leaderboard_layout"
        orientation="horizontal"
        backgroundColor="#88645394"
        script="ui/RoundedBackground.lua"
        padding="8dp 6dp 8dp 6dp"
        p_below="crystals_layout"
        p_alignRight="crystals_layout"
        p_marginBottom="6dp">

        <ImageWidget
            width="12.5dp"
            height="12.5dp"
            name="leaderboard_image"
            imageSrc="icons/leaderboard.png"
            imageFiltering="linear"
            p_marginRight="8dp"/>

        <Label
            name="leaderboard"
            textAlignment="left"
            fontSize="14dp"
            fontColor="#ffffff"
            p_layoutAlignment="center"/>

    </LinearLayout>

    <ImageWidget
        width="24dp"
        height="24dp"
        name="shop"
        backgroundColor="#88645394"
        script="ui/RoundedBackground.lua"
        padding="4dp 4dp 4dp 4dp"
        imageSrc="icons/shop.png"
        imageFiltering="linear"
        p_below="leaderboard_layout"
        p_alignRight="leaderboard_layout"/>

</RelativeLayout>
